TAVILY_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SERPAPI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Only used when NOT using the Chroma container (CHROMA_HTTP_HOST empty). Local dev without Docker.
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Chroma container: set these to use the chroma service (compose sets these for api/worker). When set, CHROMA_PERSIST_DIRECTORY is ignored.
CHROMA_HTTP_HOST=chroma
CHROMA_HTTP_PORT=8000

# Postgres for LangGraph checkpoints (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/research

# Set for distributed mode (Celery + Redis). Leave empty for single-process dev.
REDIS_URL=redis://localhost:6379/0

# With Docker Compose: REDIS_URL=redis://redis:6379/0, DATABASE_URL=postgresql://postgres:postgres@postgres:5432/research
OPENAI_MODEL=gpt-4o-mini
# Vector embeddings (ChromaDB); default in config.yml is text-embedding-3-small
EMBEDDING_MODEL=text-embedding-3-small

# LangSmith (tracing / observability) - get key at https://smith.langchain.com
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LANGSMITH_PROJECT="multi-agent-research-synthesizer"
OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx